<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hello World!"
        android:textSize="30sp" />

    <!-- the tools attribute insted of android specifies this is a placeholder-->

    <ImageView
        android:id="@+id/dice_image2"
        android:layout_width="112dp"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:baselineAligned="false"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/empty_dice" />

    <ImageView
        android:id="@+id/dice_image1"
        android:layout_width="112dp"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:baselineAligned="false"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/empty_dice" />

    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/roll_label" />

    <Button
        android:id="@+id/countup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/countup_label" />


</LinearLayout>